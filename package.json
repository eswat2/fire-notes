{
  "name": "fire-notes",
  "version": "1.0.0",
  "description": "a simple websocket based notes server...",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "fix": "eslint *.js --fix",
    "lintr": "esw *.js --color",
    "watch": "npm run lintr -- --watch",
    "report": "eslint *.js -f html > eslint.html",
    "deploy": "git push heroku master",
    "open": "open https://fire-notes.herokuapp.com"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "author": "Richard Hess eswat2@gmail.com (https://about.me/richardhess)",
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-eslint": "10.0.3",
    "eslint": "6.8.0",
    "eslint-find-rules": "3.4.0",
    "eslint-formatter-pretty": "3.0.1",
    "eslint-loader": "3.0.3",
    "eslint-plugin-import": "2.20.1",
    "eslint-watch": "6.0.1",
    "husky": "4.2.3",
    "lint-staged": "10.0.7"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "cors": "2.8.5",
    "express": "4.17.1",
    "mem": "6.0.1",
    "mongoose": "5.8.13",
    "request": "2.88.2",
    "ws": "7.2.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eswat2/fire-notes"
  },
  "keywords": [
    "node",
    "heroku",
    "express",
    "websockets"
  ],
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
