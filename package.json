{
  "name": "fire-notes",
  "version": "1.0.0",
  "description": "a simple websocket based notes server...",
  "engineStrict": true,
  "engines": {
    "node": "9.4.0",
    "npm": "5.6.0"
  },
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "fix": "eslint *.js --fix",
    "lintr": "esw *.js --color",
    "watch": "npm run lintr -- --watch",
    "report": "eslint *.js -f html > eslint.html"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "author": "Richard Hess eswat2@gmail.com (https://about.me/richardhess)",
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-eslint": "10.0.1",
    "eslint": "5.16.0",
    "eslint-find-rules": "3.3.1",
    "eslint-formatter-pretty": "2.1.1",
    "eslint-loader": "2.1.2",
    "eslint-plugin-import": "2.16.0",
    "eslint-watch": "5.0.1",
    "husky": "1.3.1",
    "lint-staged": "8.1.5"
  },
  "dependencies": {
    "body-parser": "1.18.3",
    "cors": "2.8.5",
    "express": "4.16.4",
    "mongoose": "5.5.1",
    "request": "2.88.0",
    "ws": "6.2.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eswat2/fire-notes"
  },
  "keywords": [
    "node",
    "heroku",
    "express",
    "websockets"
  ],
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
